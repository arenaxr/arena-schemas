            "type": "string"
        },
        "persist": {
            "default": false,
            "description": "Persist this object in the database.",
            "type": "boolean"
        },
        "type": {
            "description": "One of the client event action types like 'mousedown'.",
            "enum": [
                "mousedown",
                "mouseup",
                "mouseenter",
                "mouseleave",
                "triggerdown",
                "triggerup",
                "gripdown",
                "gripup",
                "menudown",
                "menuup",
                "systemdown",
                "systemup",
                "trackpaddown",
                "trackpadup",
                "soundplay",
                "soundpause",
                "soundstop"
            ],
            "type": "string"
        },
        "action": {
            "default": "clientEvent",
            "description": "Message action client event.",
            "enum": [
                "clientEvent"
            ],
            "type": "string"
        },
        "data": {
            "properties": {
                "source": {
                    "title": "Source ID",
                    "description": "The `object_id` of event origination. e.g camera or client program connection id.",
                    "type": "string"
                },
                "position": {
                    "$ref": "#/definitions/position"
                },
                "clickPos": {
                    "description": "The event origination position in 3D.",
                    "format": "grid",
                    "$ref": "#/definitions/vector3",
                    "title": "Click Position",
                    "default": {
                        "x": 0,
                        "y": 1.6,
                        "z": 0
                    }
                }
            },
            "title": "Event Data",
            "additionalProperties": true,
            "required": [
                "position",
                "source"
            ]
        }
    }
